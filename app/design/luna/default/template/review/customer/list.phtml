<?php echo $this->getMessagesBlock()->toHtml() ?>
<div class="page-title">
    <h1><?php echo $this->__('My Product Reviews') ?></h1>
</div>
<?php if( $this->getCollection() && $this->count()): ?>
    <?php echo $this->getToolbarHtml() ?>
    
        <table class="table table-responsive data-table ratings-table" id="my-reviews-table">
            <thead>
                <tr>
                    <td><span class="nobr"><?php echo $this->__('Date'); ?></span></td>
                    <td><span class="nobr"><?php echo $this->__('Product'); ?></span></td>
                    <td><span class="nobr"><?php echo $this->__('Review'); ?></span></td>
                    <td>&nbsp;</span></td>
                </tr>
            </thead>
            <tbody>
                <?php foreach ($this->getCollection() as $_review): ?>
                <tr>
                    <td>
                        <span class="visible-xs hidden pull-left small-label"><?php echo $this->__('Date') ?>:</span>
                        <span class="pull-left nobr"><?php echo $this->dateFormat($_review->getReviewCreatedAt()); ?></span>
                    </td>
                    <td>
                        <span class="visible-xs hidden pull-left small-label"><?php echo $this->__('Product') ?>:</span>
                        <h2 class="product-name pull-left">
                            <a href="<?php echo $this->getProductLink() ?>id/<?php echo $_review->getEntityPkValue() ?>">
                                <?php echo $this->escapeHtml($_review->getName()) ?>
                            </a>
                        </h2>
                    </td>
                    <td class="description">
                        <span class="visible-xs hidden pull-left small-label"><?php echo $this->__('Review') ?>:</span>
                        <span class="pull-left"><?php echo $this->helper('review')->getDetailHtml($_review->getDetail()) ?></span>
                    </td>
                    <td class="eye-holder">
                        <a title="<?php echo $this->__('View Details') ?>" href="<?php echo $this->getReviewLink() ?>id/<?php echo $_review->getReviewId() ?>" class="hidden-xs btn-eye">
                            <i class="fa fa-eye"></i>
                        </a>
                    </td>
                    <td class="btn-xs">
                        <div class="visible-xs">
                            <a title="<?php echo $this->__('View Details') ?>" href="<?php echo $this->getReviewLink() ?>id/<?php echo $_review->getReviewId() ?>" class="btn-xs-eye">
                                <i class="fa fa-eye"></i> <span><?php echo $this->__('View'); ?></span>
                            </a>
                        </div>
                    </td>
                </tr>
                <?php endforeach; ?>
            </tbody>
        </table>
        <script type="text/javascript">decorateTable('my-reviews-table')</script>
    <div class="toolbar-bottom">
        <?php echo $this->getToolbarHtml() ?>
    </div>
<?php else: ?>
    <p><?php echo $this->__('You have submitted no reviews.') ?></p>
<?php endif; ?>

