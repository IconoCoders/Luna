<form id="discount-coupon-form" action="<?php echo $this->getFormActionUrl() ?>" method="post">
    <div class="cart-discount-form text-center">
        <div class="cart-discount-title"><?php echo $this->__('Discount Codes') ?></div>
        <input type="hidden" name="remove" id="remove-coupone" value="0" />
        <div class="field-wrapper">
            <div class="input-wrapper col-xs-12 col-sm-8 col-sm-offset-2 col-md-7 col-md-offset-0">
                <input class="input-text discount-input" type="text" id="coupon_code" name="coupon_code" value="<?php echo $this->escapeHtml($this->getCouponCode()) ?>" />
            </div>

            <div class="button-wrapper col-xs-6 col-xs-offset-3 col-sm-4 col-sm-offset-4 col-md-5 col-md-offset-0">
                <button class="btn-apply" type="button" title="<?php echo Mage::helper('core')->quoteEscape($this->__('Apply')) ?>" onclick="discountForm.submit(false)" value="<?php echo $this->__('Apply') ?>">
                    <i class="fa fa-check"></i>
                    <span><?php echo Mage::helper('core')->quoteEscape($this->__('Apply')) ?></span>
                </button>
                <?php if(strlen($this->getCouponCode())): ?>
                    <button type="button" title="<?php echo Mage::helper('core')->quoteEscape($this->__('Cancel')) ?>" class="button2 cancel-coupon" onclick="discountForm.submit(true)" value="<?php echo $this->__('Cancel') ?>">
                        <i class="fa fa-times"></i>
                        <span><?php echo $this->__('TÖRLÉS') ?></span>
                    </button>
                <?php endif;?>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</form>
<script type="text/javascript">
//<![CDATA[
var discountForm = new VarienForm('discount-coupon-form');
discountForm.submit = function (isRemove) {
    if (isRemove) {
        $('coupon_code').removeClassName('required-entry');
        $('remove-coupone').value = "1";
    } else {
        $('coupon_code').addClassName('required-entry');
        $('remove-coupone').value = "0";
    }
    return VarienForm.prototype.submit.bind(discountForm)();
}
//]]>
</script>
