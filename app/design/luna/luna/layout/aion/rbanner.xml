<?xml version="1.0"?>
<layout version="0.1.0">
    <default>
        <reference name="head">
            <action method="addItem">
                <type>skin_js</type>
                <name>aion/vendor/owl.carousel2/js/owl.carousel.min.js</name>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <name>aion/aion-rbanner/js/aion-config.js</name>
            </action>
            <action method="addItem">
                <type>skin_css</type>
                <name>aion/vendor/owl.carousel2/css/owl.carousel.min.css</name>
            </action>
            <action method="addItem">
                <type>skin_css</type>
                <name>aion/vendor/owl.carousel2/css/owl.theme.default.css</name>
            </action>
            <action method="addItem">
                <type>skin_css</type>
                <name>aion/aion-rbanner/css/aion-rbanner.css</name>
            </action>
        </reference>

        <block type="aion_rbanner/banner" name="banner_content_top" template="aion/rbanner/banner.phtml" before="-">
            <action method="setPosition"><name>CONTENT_TOP</name></action>
            <block type="aion_rbanner/banner_slide" name="banner_slide" template="aion/rbanner/banner/slide.phtml" />
            <block type="aion_rbanner/banner" name="banner_small_banners" as="small_banners" template="aion/rbanner/small_banners.phtml" />
            <block type="aion_rbanner/banner" name="banner_icon_banners" as="icon_banners" template="aion/rbanner/icon_banners.phtml" />
        </block>
        <block type="aion_rbanner/banner" name="banner_content_bottom" template="aion/rbanner/banner.phtml" after="-">
            <action method="setPosition"><name>CONTENT_BOTTOM</name></action>
            <block type="aion_rbanner/banner_slide" name="banner_slide" template="aion/rbanner/banner/slide.phtml" />
        </block>
        <block type="aion_rbanner/banner" name="banner_content_background" template="aion/rbanner/background.phtml" after="-">
            <action method="setPosition"><name>BODY_BACKGROUND</name></action>
            <block type="aion_rbanner/banner_slide" name="banner_slide" template="aion/rbanner/banner/slide.phtml" />
        </block>
    </default>
</layout>
