<?xml version="1.0"?>
<layout version="0.1.0">
    <default>
        <reference name="head">
            <action method="addItem">
                <type>skin_js</type>
                <name>icoders/vendor/owl.carousel2/js/owl.carousel.min.js</name>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <name>icoders/icoders-slider/js/icoders-config.js</name>
            </action>
            <action method="addItem">
                <type>skin_css</type>
                <name>icoders/vendor/owl.carousel2/css/owl.carousel.min.css</name>
            </action>
            <action method="addItem">
                <type>skin_css</type>
                <name>icoders/vendor/owl.carousel2/css/owl.theme.default.css</name>
            </action>
            <action method="addItem">
                <type>skin_css</type>
                <name>icoders/icoders-slider/css/icoders-slider.css</name>
            </action>
        </reference>

        <block type="icoders_slider/banner" name="banner_content_top" template="icoders/slider/banner.phtml" before="-">
            <action method="setPosition"><name>CONTENT_TOP</name></action>
            <block type="icoders_slider/banner_slide" name="banner_slide" template="icoders/slider/banner/slide.phtml" />
            <block type="icoders_slider/banner" name="banner_small_banners" as="small_banners" template="icoders/slider/small_banners.phtml" />
            <block type="icoders_slider/banner" name="banner_icon_banners" as="icon_banners" template="icoders/slider/icon_banners.phtml" />
        </block>
        <block type="icoders_slider/banner" name="banner_content_bottom" template="icoders/slider/banner.phtml" after="-">
            <action method="setPosition"><name>CONTENT_BOTTOM</name></action>
            <block type="icoders_slider/banner_slide" name="banner_slide" template="icoders/slider/banner/slide.phtml" />
        </block>
        <block type="icoders_slider/banner" name="banner_content_background" template="icoders/slider/background.phtml" after="-">
            <action method="setPosition"><name>BODY_BACKGROUND</name></action>
            <block type="icoders_slider/banner_slide" name="banner_slide" template="icoders/slider/banner/slide.phtml" />
        </block>
    </default>
</layout>
